    <div data-options="region:'south',border:false" style="height: 50px; background: #A9FACD; padding: 10px;"><marquee>谢谢使用</marquee></div>
    <div data-options="region:'center',title:'欢迎使用'">
        <div title="" style="padding: 0px; overflow: hidden; height: 100%" id="home">
            <iframe id="ifrmList" name="ifrmList" scrolling="OVERFLOW-Y" frameborder="0" height="608px"
                    width="99.9%" src="@Url.Action("Index", "TuPian", "")"></iframe>
